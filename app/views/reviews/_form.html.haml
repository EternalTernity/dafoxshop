= form_for [@product, @review] do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :star_rating
    = f.number_field :star_rating
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :product
    = f.text_field :product
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
