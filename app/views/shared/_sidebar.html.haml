%aside#default-sidebar.fixed.top-0.left-0.z-40.w-64.h-screen.transition-transform.-translate-x-full.sm:translate-x-0{"aria-label" => "Sidebar"}
  .h-full.px-3.py-4.overflow-y-auto.bg-gray-50.dark:bg-gray-800
    %ul.space-y-2.font-medium
      %li
        = link_to admin_path do
          .flex.items-center.p-2.text-gray-900.rounded-lg.dark:text-white.hover:bg-gray-100.dark:hover:bg-gray-700
            = icon('fa-solid','table')
            %span.ml-3 Dashboard
      %li
        = link_to "/" do
          .flex.items-center.p-2.text-gray-900.rounded-lg.dark:text-white.hover:bg-gray-100.dark:hover:bg-gray-700
            = icon('fa-solid','wallet')
            %span.ml-3 E-wallet
      %li
        = link_to admin_products_path do
          .flex.items-center.p-2.text-gray-900.rounded-lg.dark:text-white.hover:bg-gray-100.dark:hover:bg-gray-700
            = icon('fa-solid','cart-shopping')
            %span.ml-3 Product Items
      %li
        = link_to admin_reviews_path do
          .flex.items-center.p-2.text-gray-900.rounded-lg.dark:text-white.hover:bg-gray-100.dark:hover:bg-gray-700
            = icon('fa-solid','cart-shopping')
            %span.ml-3 Reviews      
      - if user_signed_in?
        %li
          = link_to destroy_user_session_path,data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to sign out?" } do
            .flex.items-center.p-2.text-gray-900.rounded-lg.dark:text-white.hover:bg-gray-100.dark:hover:bg-gray-700
              = icon('fa-solid','sign-out')
              %span.ml-3 Sign Out
