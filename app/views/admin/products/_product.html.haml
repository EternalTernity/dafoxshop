    %strong.block.font-medium.mb-1 Name:
    = product.name
  %p.my-5
    %strong.block.font-medium.mb-1 Description:
    = product.description
  %p.my-5
    %strong.block.font-medium.mb-1 Price:
    = product.price
  %p.my-5
    %strong.block.font-medium.mb-1 Created by:
