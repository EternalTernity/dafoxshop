%h1 Listing addresses

%table
  %thead
    %tr
      %th City
      %th Province
      %th Barangay
      %th Zip code
      %th Street
      %th House number
      %th User
      %th
      %th
      %th

  %tbody
    - @addresses.each do |address|
      %tr
        %td= address.city
        %td= address.province
        %td= address.barangay
        %td= address.zip_code
        %td= address.street
        %td= address.house_number
        %td= address.user
        %td= link_to 'Show', address
        %td= link_to 'Edit', edit_address_path(address)
        %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }

