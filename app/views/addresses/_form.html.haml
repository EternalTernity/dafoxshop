= form_for @address do |f|
  - if @address.errors.any?
    #error_explanation
      %h2= "#{pluralize(@address.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @address.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :province
    = f.text_field :province
  .field
    = f.label :barangay
    = f.text_field :barangay
  .field
    = f.label :zip_code
    = f.number_field :zip_code
  .field
    = f.label :street
    = f.text_field :street
  .field
    = f.label :house_number
    = f.number_field :house_number
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
